@model Vidly.Models.Customer
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name);
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", placeholde = "Enter Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.BirthDate);
        @Html.TextBoxFor(c => c.BirthDate,"{0:dd/MM/yyyy}",  new { @class = "form-control", placeholde = "01/01/1990" })
    </div>

    <div class="form-group form-check">
        @Html.CheckBoxFor(c => c.IsSubstribedToNewsletter)
        <label class="form-check-label"> Subscribe to Newsletter</label>
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(c => c.MembershipTypeId)
        @Html.DropDownListFor(c => c.MembershipTypeId, new SelectList(ViewBag.MemebershipTypes, "Id", "Name"), new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
}

