@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (Model.Count > 0)
{
<table>
    <tr>
        <th>Customer</th>
        <th>MemberShip Type</th>
    </tr>
    @foreach (var customer in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(customer.Name, "Details", "Customer", new { Id = customer.Id }, null)
        </td>
        <td>
            @customer.MembershipType.Name
        </td>
    </tr>        
    }
</table>
}
else
{
    <text>Não há clientes cadastrados ainda.</text>
}


