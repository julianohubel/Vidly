@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (Model.Count > 0)
{
<table>
    @foreach (var cutomer in Model)
    {
    <tr>
        <td>
            @Html.ActionLink(cutomer.Name, "Details", "Customer", new {Id = cutomer.Id}, null)
        </td>
    </tr>
    }
</table>
}
else
{
    <text>Não há clientes cadastrados ainda.</text>
}


