@model Vidly.ViewModel.CreateCustumerViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create Customer</h2>


@using (Html.BeginForm("Create", "Customer"))
{

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control", placeholder = "Enter Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.BirthDate)
        @Html.TextBoxFor(c => c.Customer.BirthDate, new { @class = "form-control", placeholder = "01/01/1990" })
    </div>
    <div class="form-group form-check">
        @Html.CheckBoxFor(c => c.Customer.IsSubstribedToNewsletter)
        <label class="form-check-label"> Subscribe to Newsletter</label>
    </div>
    <div class="form-group form-check">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type",  new {@class="form-control"})
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

}

