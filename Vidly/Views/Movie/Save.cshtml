@model Vidly.Models.Movie
@{
    ViewBag.Title = (Model == null ? "Create Movie" : "Edit Movie");
}

<h2>@(Model == null ? "Create Movie"  : "Edit Movie")</h2>


@using (Html.BeginForm("Save", "Movie"))
{

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Release)
        @Html.TextBoxFor(m => m.Release,"{0:dd/MM/yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.GenreId, new SelectList(ViewBag.Genres, "Id", "Name"), "Select Genre" , new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Stock)
        @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
    </div>    
    @Html.HiddenFor(m => m.Added)
    <button type="submit" class="btn btn-primary">Save</button>

}



