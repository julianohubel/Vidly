@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.ActionLink("New Movie", "Save", "Movie", null, new { @class = "btn btn-primary" })
<table class="table table-hover">

    <tr><th scope="col">Name</th><th scope="col">Genre</th></tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(movie.Name, "Save", new { id = movie.Id }, null)
            </td>
            <td>
                @movie.Genre.Name
            </td>
        </tr>
    }
</table>

