@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table>

    <tr><th>Name</th><th>Genre</th></tr>
    @foreach (var movie in Model)
    {
    <tr>
        

        <td>
            @Html.ActionLink(movie.Name, "Details", new { id = movie.Id}, null)            
        </td>
        <td>
            @movie.Genre.Name
        </td>
    </tr>
    }
</table>

