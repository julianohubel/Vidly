
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table id="movies" class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Genre</th>            
        </tr>
    </thead>

    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var tbl =
                $("#movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    columns:
                        [
                            {
                                data: "name",
                                render: function (data, type, movie) {
                                    return "<a href='/movie/" + movie.id + "'>" + data + "</a>"
                                }
                            },
                            {
                                data: "genre.name"
                            }                            
                        ]
                });
            


        });
    </script>

}



